---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

let posts = [];
try {
	posts = (await getCollection('posts')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
	);
} catch {
	posts = [];
}
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Essays · ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			.list {
				list-style: none;
				padding: 0;
				margin: 0;
				display: grid;
				gap: 1rem;
			}
			.item {
				padding: 1rem 0;
				border-bottom: 1px solid rgb(var(--border));
			}
			.item a {
				display: block;
				text-decoration: none;
			}
			.title {
				margin: 0;
				font-size: 1.25rem;
				font-weight: 600;
				color: rgb(var(--text));
			}
			.meta {
				margin: 0.25rem 0 0 0;
				color: rgb(var(--muted));
				font-size: 0.95rem;
			}
			.empty {
				padding: 2rem 0;
				color: rgb(var(--muted));
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Essays</h1>
			{posts.length === 0 ? (
				<p class="empty">
					Nothing published yet. Check back soon — or subscribe via <a href="/rss.xml">RSS</a>.
				</p>
			) : (
				<ul class="list">
					{posts.map((post) => (
						<li class="item">
							<a href={`/posts/${post.id}/`}>
								<h2 class="title">{post.data.title}</h2>
								<p class="meta">
									<FormattedDate date={post.data.pubDate} />
									{post.data.description ? ` · ${post.data.description}` : ''}
								</p>
							</a>
						</li>
					))}
				</ul>
			)}
		</main>
		<Footer />
	</body>
</html>
